#compdef _color color


_color() {

    local state line
    setopt localoptions globassign

    _arguments  \
        '1: :->theme'

    case $state in
        theme)
            themes=~/.config/base16-shell/scripts/*.sh(:t:r:s/base16-//)
            compadd "$@" $themes
            ;;
    esac
}
_color "$@"

