alias ls='ls -G'
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias vim=nvim
alias vi=nvim
alias v='nvim $(fzf $1)'
alias -g CP="|pbcopy"
alias -g L="|less"
alias -g FZF="|fzf"
alias zs='echo ''Sourcing .zshrc''; source ~/.zshrc'
alias b16='eval $(alias | rg base16 | cut -d '=' -f1 | fzf-tmux -p --reverse)'

# Git
alias glt='git log --oneline --max-count 20'
alias gst='git status'

